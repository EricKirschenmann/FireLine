<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
  </style>

  <style name="ListTitle" parent="AppTheme">
    <item name="android:textSize">@dimen/title_size</item>
    <item name="android:textColor">@color/primary_text</item>
    <item name="android:paddingTop">@dimen/padding</item>
    <item name="android:paddingLeft">@dimen/padding</item>
    <item name="android:paddingRight">@dimen/padding</item>
  </style>

  <style name="ListItem" parent="AppTheme">
    <item name="android:textSize">@dimen/item_size</item>
    <item name="android:textColor">@color/secondary_text</item>
    <item name="android:paddingBottom">16.5dp</item>
    <item name="android:paddingLeft">@dimen/padding</item>
    <item name="android:paddingRight">@dimen/padding</item>
  </style>

  <style name="DetailsList" parent="AppTheme">
    <item name="android:textSize">@dimen/detail_tile</item>
    <item name="android:textColor">@color/primary_text</item>
    <item name="android:paddingTop">@dimen/padding</item>
    <item name="android:paddingLeft">@dimen/padding</item>
    <item name="android:paddingRight">@dimen/padding</item>
  </style>

  <style name="DetailsItem" parent="AppTheme">
    <item name="android:textSize">@dimen/detail_tile</item>
    <item name="android:textColor">@color/secondary_text</item>
    <item name="android:paddingBottom">@dimen/padding</item>
    <item name="android:paddingLeft">@dimen/padding</item>
    <item name="android:paddingRight">@dimen/padding</item>
  </style>

</resources>
