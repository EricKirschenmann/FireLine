<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.erickirschenmann.fireline.MainActivity">

  <!--will contain the JSON data returned by the server-->
  <android.support.v7.widget.RecyclerView
    android:id="@+id/rv_incident"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical">

  </android.support.v7.widget.RecyclerView>

  <!--will provide an error message if the data cannot be fetched from Fireline-->
  <TextView
    android:id="@+id/tv_error_message"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/error_message"
    android:visibility="invisible"/>

  <!--will be visible when fetching data, hopefully not very long-->
  <ProgressBar
    android:id="@+id/pb_loading_indicator"
    android:layout_width="42dp"
    android:layout_height="42dp"
    android:layout_gravity="center"/>

</FrameLayout>
