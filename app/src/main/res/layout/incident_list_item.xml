<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical">

  <!-- will contain the incident type -->
  <!-- first step at splitting the viewholder up into different pieces -->
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
      android:id="@+id/tv_incident_type"
      style="@style/ListTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

    <TextView
      android:id="@+id/tv_incident_distance"
      style="@style/ListTitleDistance"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="end"/>
  </LinearLayout>


  <!--will contain the data pulled from the JSON-->
  <TextView
    android:id="@+id/tv_incident_data"
    style="@style/ListItem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

  <!--line that separates the items within the RecyclerView-->
  <View
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:background="#dadada"/>

</LinearLayout>